<div class="well" style="width: 470px; margin-top: 50px; margin-left: 120px; margin-right: auto;">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal" }) do |f| %>
  <%= devise_error_messages! %>

    <fieldset>
      <legend>Sign Up</legend>
      <div class="control-group">
        <%= f.label :username, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :username, :class => "input-xlarge" %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :email, :class => "control-label" %>
        <div class="controls">
          <%= f.email_field :email, :class => "input-xlarge" %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :password, :class => "control-label" %>
        <div class="controls">
          <%= f.password_field :password, :class => "input-xlarge" %>
        </div>
      </div>
      <%= f.submit "Sign Up + Confirmation Email", :class => "btn btn-large btn-success", :style => "margin-left: 160px;" %>
    </fieldset>
<% end %>
</div>


