
<div class="row" style="margin-top: 139px; margin-bottom: 130px;">
  <div class="span4 offset4">
    <div class="well">
      <legend>Sign in to WarSocial</legend>
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <%= f.email_field :email, :placeholder => "Username", :class => "span3" %>
        <%= f.password_field :password, :placeholder => "Password", :class => "span3" %>

        <% if devise_mapping.rememberable? -%>
          <label class="checkbox">
            <%= f.check_box :remember_me %> Remember Me
          </label>
        <% end -%>

        <%= f.submit "Login", :class => "btn-info btn" %>
      <% end %>

      <div>
        <%= render :partial => "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

