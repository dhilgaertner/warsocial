<meta http-equiv="cache-control" content="max-age=0" />
<meta http-equiv="cache-control" content="no-cache" />
<meta http-equiv="expires" content="0" />
<meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
<meta http-equiv="pragma" content="no-cache, must-revalidate, max-age=0, no-store" />

<link rel="stylesheet" type="text/css" href="/css/jquery-ui-1.8.18.custom.css">

<script>
  head.js(
    'http://js.pusher.com/1.12/pusher.min.js'
  );

  <% if Rails.env.development? %>
    head.js(
      '/assets/lib/jquery.dataTables.min.js?v=2',
      '/assets/lib/customSelect.jquery.js',
      '/assets/lib/labelover.js'
    );
  <% end %>

  <% if Rails.env.development? && !@dev && !@dev_image %>

    head.js(
      '/gameboard/game_page.js',
      '/gameboard/communications.js?v=2',
      '/gameboard/soundmanager.js?v=2',
      '/gameboard/dicebox.js?v=2',
      '/gameboard/land.js?v=2',
      '/gameboard/map.js?v=2',
      '/gameboard/mapcanvas.js?v=2',
      '/gameboard/player.js?v=2',
      '/gameboard/shared.js?v=2',
      '/gameboard/warsocial.js?v=2'
    );

  <% elsif @dev || @dev_image %>

    head.js(
      '/gameboard/game_page.js',
      'http://www.bigroundeyes.ca/clients/Dustin/warsocial/warsocial/communications.js?v=4',
      'http://www.bigroundeyes.ca/clients/Dustin/warsocial/warsocial/soundmanager.js?v=4',
      'http://www.bigroundeyes.ca/clients/Dustin/warsocial/warsocial/dicebox.js?v=4',
      'http://www.bigroundeyes.ca/clients/Dustin/warsocial/warsocial/land.js?v=4',
      'http://www.bigroundeyes.ca/clients/Dustin/warsocial/warsocial/map.js?v=4'
    );

    <% if @dev %>

      head.js(
        'http://www.bigroundeyes.ca/clients/Dustin/warsocial/warsocial/mapcanvas.js?v=4'
      );

    <% else %>

      head.js(
        'http://www.bigroundeyes.ca/clients/Dustin/warsocial/warsocial/mapcanvas_sprite.js?v=4'
      );

    <% end %>

    head.js(
      'http://www.bigroundeyes.ca/clients/Dustin/warsocial/warsocial/player.js?v=4',
      'http://www.bigroundeyes.ca/clients/Dustin/warsocial/warsocial/shared.js?v=4',
      'http://www.bigroundeyes.ca/clients/Dustin/warsocial/warsocial/warsocial.js?v=4'
    );

  <% end %>

  <% if Rails.env.development? || @dev || @dev_image %>

    head.js(
      '/gameboard/turn_timer.js?v=2',
      <% if @test %>
      '/gameboard/seats2.js?v=2',
      <% else %>
      '/gameboard/seats.js?v=2',
      <% end %>
      '/gameboard/lobby.js?v=2',
      '/gameboard/chatbox.js?v=2',
      '/gameboard/gamelog.js?v=2',
      '/gameboard/create_game.js?v=2'
    );

  <% end %>

</script>

<script type="text/javascript">

  head.ready(function() {
    var urls = {
      paurl: "<%= auth_pusher_index_path %>",
      settings_toggle_stats_url: "<%= settings_toggle_stats_url %>",
      settings_toggle_sounds_url: "<%= settings_toggle_sounds_url %>"
    };
    game_page_init("<%= @game.name %>", <%= @init_data.to_json.html_safe %>, <%= @maps.to_json.html_safe %>, <%= Rails.env.production? %>, "<%= Pusher.key %>", <%= current_user != nil ? current_user.id : 0 %>, "<%= current_user != nil ? current_user.username : "anon" %>", urls);
  });

</script>