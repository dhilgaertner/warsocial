<div ng-controller="GameCreateCtrl" class="modal" id="create_game" style="display: none;">
  <div class="modal-body">
    <div class="well" style="height: 350px;">
      <div style="float: left; width: 200px; height: 310px;">
        <h3 style="margin-left: 60px; margin-bottom: 10px;">Map</h3>
        <div id="create_game_maps" style="width: 200px; height: 310px; overflow-y: scroll;">
          <ul class="thumbnails">
            <li class="span2" ng-repeat="map in maps" ng-click="selectMap(map)">
              <a href="#" class="thumbnail" ng-class="{active: map.name==selectedMap}">
                <img src="{{map.thumbnail}}" alt="">
                <p style="margin-left: 5px; margin-top: 5px; margin-bottom: 5px;">{{map.name}}</p>
              </a>
            </li>
          </ul>
        </div>
      </div>
      <div style="float: right; width: 250px; height: 350;">
        <h3 style="margin-bottom: 10px; margin-left: 85px;">Players</h3>
        <div id="create_game_players" class="btn-group" data-toggle="buttons-radio">
          <button class="btn btn-large active" value="2" onclick="return false;">2</button>
          <button class="btn btn-large" value="3" onclick="return false;">3</button>
          <button class="btn btn-large" value="4" onclick="return false;">4</button>
          <button class="btn btn-large" value="5" onclick="return false;">5</button>
          <button class="btn btn-large" value="6" onclick="return false;">6</button>
          <button class="btn btn-large" value="7" onclick="return false;">7</button>
        </div>

        <h3 style="margin-top: 20px; margin-bottom: 10px; margin-left: 90px;">Wager</h3>
        <div id="create_game_wager" class="btn-group" data-toggle="buttons-radio">
          <button class="btn btn-large active" value="0" onclick="return false;">0</button>
          <button class="btn btn-large" value="50" onclick="return false;">50</button>
          <button class="btn btn-large" value="100" onclick="return false;">100</button>
          <button class="btn btn-large" value="200" onclick="return false;">200</button>
          <button class="btn btn-large" value="500" onclick="return false;">500</button>
          <button class="btn btn-large" value="2000" onclick="return false;">2k</button>
          <button class="btn btn-large" value="5000" onclick="return false;">5k</button>
          <button class="btn btn-large" value="10000" onclick="return false;">10k</button>
        </div>

        <h3 style="margin-top: 20px; margin-bottom: 10px; margin-left: 70px;">Game Type</h3>
        <div id="create_game_type" class="btn-group" data-toggle="buttons-radio">
          <button class="btn btn-large active" value="normal" onclick="return false;">Live</button>
          <button class="btn btn-large" value="multiday" onclick="return false;">Multi-Day</button>
        </div>

      </div>

    </div>
  </div>
  <div class="modal-footer">
    <a href="#" data-dismiss="modal" class="btn">Cancel</a> <input type="submit" class="btn btn-success" value="Create">
  </div>
</div>