<div class="modal" id="game_lobby" style="display: none;">
  <div class="modal-header">
    <button class="close" data-dismiss="modal">Ã—</button>
    <h3>Lobby</h3>
  </div>
  <div class="modal-body">
    <ul class="nav nav-pills">
      <li><a href="#online" data-toggle="tab">Who's Online<span id="online_badge" class="badge">1</span></a></li>
      <li class="active"><a href="#tables" data-toggle="tab">Tables<span id="tables_badge" class="badge">1</span></a></li>
      <% if current_user != nil && current_user.admin? && ["deadcode", "dc"].include?(current_user.username) %>
        <li><a href="#multi-day" data-toggle="tab">Multi-Day<span id="multi_badge_1" class="badge badge-important">1</span><span id="multi_badge_2" class="badge">1</span></a></li>
      <% end %>
    </ul>
    <div class="well">
      <div class="tab-content">
        <div class="tab-pane" id="online">
          <table class="table table-striped">
            <thead>
            <tr>
              <th>Name</th>
              <th>Points</th>
              <th>Last Location</th>
            </tr>
            </thead>
            <tbody>

            </tbody>
          </table>
        </div>
        <div class="tab-pane active" id="tables">
          <table class="table table-striped">
            <thead>
            <tr>
              <th>Name</th>
              <th>Players</th>
              <th>Wager</th>
              <th>State</th>
            </tr>
            </thead>
            <tbody>

            </tbody>
          </table>
        </div>
        <% if current_user != nil && current_user.admin? && ["deadcode", "dc"].include?(current_user.username) %>
          <div class="tab-pane" id="multi-day">
            <table class="table table-striped">
              <thead>
              <tr>
                <th>Name</th>
                <th>Players</th>
                <th>Wager</th>
                <th>State</th>
              </tr>
              </thead>
              <tbody>

              </tbody>
            </table>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <a href="#" data-dismiss="modal" class="btn">Close</a>
  </div>
</div>