<div id="game_lobby_wrapper">
    <div id="lobby_header" class="online">
        <%= link_to "Who's Online", "#", :name => "online", :class => "tab", :style => "left: 11px;" %>
        <%= link_to "Open Tables", "#", :name => "open_tables", :class => "tab", :style => "left: 28px;" %>
        <%= link_to "Running", "#", :name => "running_tables", :class => "tab", :style => "left: 46px;" %>
        <%= link_to "Create", "#", :name => "create_table", :class => "tab", :style => "left: 63px;" %>
    </div>
    <div id="lobby_content_wrapper">
        <div class="content_page" name="online">
            Coming Soon.
        </div>
        <div class="content_page" name="open_tables">
          <table id="open_tables" cellpadding="5px;">
            <thead>
            <tr>
              <th>Name</th>
              <th>Players</th>
              <th>Map</th>
            </tr>
            </thead>
            <tbody>

            </tbody>
          </table>
        </div>
        <div class="content_page" name="running_tables">
          <table id="running_tables" cellpadding="5px;">
            <thead>
            <tr>
              <th>Name</th>
              <th>Players</th>
              <th>Map</th>
            </tr>
            </thead>
            <tbody>

            </tbody>
          </table>
        </div>
        <div class="content_page" style="width: 741px" name="create_table">
          <div id="create-header-top">
              <select class="styled" style="margin-top: 8px; margin-left: 10px; width:210px;">
                <option>Choose Map</option>
                <option>two</option>
                <option>something</option>
                <option>4</option>
                <option>5</option>
              </select>

              <select class="styled" style="margin-top: 8px; margin-left: 10px; width:210px;">
                <option>Players</option>
                <option>two</option>
                <option>something</option>
                <option>4</option>
                <option>5</option>
              </select>
          </div>
        </div>
    </div>
</div>
