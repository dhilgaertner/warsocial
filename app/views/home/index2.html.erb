<% content_for :javascript_includes do %>
  <%= render "shared/game_js_includes" %>
<% end %>

<div id="game-container">
  <div class="game">

    <%= render "shared/game_board2" %>

  </div>
  <div class="sidebar">
    <div id="game-details">
      <div id="game-forfeit" class="wrapper forfeit" style="display:none; margin-top: 8px; margin-left: 10px;">
        <%= link_to '<i style="margin-top: 2px;" class="icon-flag icon-white"></i>'.html_safe, flag_home_index_path(:game_name => @game.name), :remote => true, :class => "btn btn-danger", :confirm => "Are you sure you want to surrender the battle?" %>
      </div>
      <div class="wrapper room" style="margin-left: 5px;"><div class="icon"></div><%= @game.name %></div>
      <div class="wrapper wager"><div class="icon"></div><%= "#{@game.wager_level}" %></div>
    </div>
    <div id="log-window">
      <table style="width: 100%">
        <tbody>
        </tbody>
      </table>
    </div>
    <div id="chat-window">
      <table style="margin-left: 5px; margin-right: 5px;">
        <tbody>
        </tbody>
      </table>
    </div>
    <% if user_signed_in? %>
      <%= form_tag(add_line_home_index_path, :id => "form-chat", :remote => true, :autocomplete => "off") do %>
        <%= hidden_field_tag 'game_name', @game.name %>
        <div class="label-over">
          <label for="entry">Type your message here...</label>
          <%= text_field_tag 'entry', nil, {:id => 'entry', :class => "input"} %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<%= render "shared/game_lobby" %>
<%= render "shared/create_game2" %>
