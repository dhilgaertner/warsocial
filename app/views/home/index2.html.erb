<% content_for :javascript_includes do %>
  <%= render "shared/game_js_includes" %>
<% end %>

<div class="row">
  <div class="span8" style="height: 620px; min-width: 780px;">

    <%= render "shared/game_board" %>

  </div>
  <div class="span4" style="margin-left: 0px; height: 290px; min-width: 200px;">
    <h5>Room: <%= @game.name %> - <%= "#{@game.wager_level} wager" %> - <%= "#{@game.max_player_count} seats" %></h5>
    <div id="chat_window">
      <table style="margin-left: 5px; margin-right: 5px;">
        <tbody>
        </tbody>
      </table>
    </div>
    <% if user_signed_in? %>
      <div style="text-align: center; margin-top: 7px;">
        <%= form_tag(add_line_home_index_path, :id => "form_chat", :remote => true, :autocomplete => "off") do %>
          <%= hidden_field_tag 'game_name', @game.name %>
          <%= text_field_tag 'entry', nil, { :size => 70, :id => 'entry', :class => "input"} %>
          <%= submit_tag "Send", { :class => "common_button", :disable_with => "Sending...", :onClick => "_gaq.push(['_trackEvent', 'Buttons', 'Chat Submit']);" } %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="span4" style="margin-left: 0px; height: 270px; min-width: 200px;">
    <div id="log_window">
      <table style="width: 100%">
        <tbody>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= render "shared/game_lobby" %>
<%= render "shared/create_game2" %>
